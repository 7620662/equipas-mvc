    ViewData["Title"] = "Index";
}
<style>
    body {
        background: rgb(214,249,202);
        background: linear-gradient(90deg, rgba(214,249,202,1) 0%, rgba(255,234,35,0.2945553221288515) 50%, rgba(213,6,6,0.2049194677871149) 100%);
    }
</style>
<h1>Index</h1>
<p><img src="https://i.imgur.com/tKIGnWU.png"></p>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pontos)
